<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <RootNamespace>TestCentric.Engine.TestBed</RootNamespace>
        <AssemblyName>test-bed</AssemblyName>
        <TargetFramework>net462</TargetFramework>
        <OutputPath>..\..\..\bin\$(Configuration)\</OutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="TestProject.nunit">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="test-bed.addins">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\TestCentric.Engine\TestCentric.Engine.csproj" />
		<PackageReference Include="NUnit.Engine.Api" Version="$(NUnitApiVersion)" />
    </ItemGroup>

</Project>